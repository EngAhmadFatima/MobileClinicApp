@model MoCl.Models.DOCTOR

@{
    ViewBag.Title = "DoctorEditInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    MoCl.Models.MOCL_DBEntities db = new MoCl.Models.MOCL_DBEntities();


    List<SelectListItem> specialization = new List<SelectListItem>();
    foreach(var item in db.SPECIALIZATIONS)
    {
        SelectListItem aa = new SelectListItem();
        aa.Text = item.Specialization1;
        aa.Value = item.Id.ToString();

        specialization.Add(aa);
    }



    List<SelectListItem> SPECIALTies = new List<SelectListItem>();
    foreach (var item in db.SPECIALTies)
    {
        SelectListItem aa1 = new SelectListItem();
        aa1.Text = item.Specialty1;
        aa1.Value = item.Id.ToString();
        SPECIALTies.Add(aa1);
    }



    List<SelectListItem> CITY = new List<SelectListItem>();
    foreach (var item in db.CITIES)
    {
        SelectListItem aa2 = new SelectListItem();
        aa2.Text = item.City_ar;
        aa2.Value = item.Id.ToString();
        CITY.Add(aa2);
    }
}

